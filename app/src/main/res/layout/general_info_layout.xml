<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General info" />

    <com.dev.mybusiness.view.LightRobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LightRobotoTextView" />

    <com.dev.mybusiness.view.RegularRobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RegularRobotoTextView" />

    <com.dev.mybusiness.view.MediumRobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MediumRobotoTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button" />
</LinearLayout>